---
import cv from "@/data/cv.json";
---
<section>
  <div class="flex justify-between gap-2 sm:flex-row flex-col-reverse items-center">
    <div class="flex flex-col items-center sm:items-start sm:text-left text-center gap-2">
      <h1 class="text-3xl font-bold sm:text-5xl">{cv.basics.name}</h1>
      <p class="text-lg text-gray-700 sm:text-xl">{cv.basics.label}</p>
    </div>
    <img src={cv.basics.image} alt={cv.basics.name + " profile photo"} class="w-32 h-32 rounded-full" />
  </div>
  <div class="flex flex-col gap-2 mt-4">
    <h2 class="text-2xl font-semibold">About me</h2>
    <p class="text-gray-700">{cv.basics.summary}</p>
  </div>
</section>