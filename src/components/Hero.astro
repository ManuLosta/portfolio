---
import cv from "@/data/cv.json";
---
<section>
  <div class="flex justify-between gap-2">
    <div class="flex flex-col">
      <h1 class="text-4xl font-extrabold mb-2">{cv.basics.name}</h1>
      <p class="text-lg text-gray-700 ">{cv.basics.summary}</p>
    </div>
    <img src={cv.basics.image} alt={cv.basics.name + " profile photo"} class="aspect-square w-32 rounded-full" />
  </div>
</section>